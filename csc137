import java.util.Scanner;

public class App {

	public static void main(String[] args) {
		// Create a Scanner to ask user for information
		Scanner scan = new Scanner(System.in);
		
		
		System.out.println("Enter your choice");
		
		
		int choice = scan.nextInt();
		// Let the user choose between three numbers that represents different companies
		if(choice == 1){
			
			System.out.println("WELCOME TO IT DEPARTMENT");
			
		}
		else if (choice == 2) {
			
			System.out.println("WELCOME TO ACC DEPT");

		}
		
		else if(choice == 3) {
			
			System.out.println("WELCOME TO HR DEPT");
			

		}
		
		//Let the user enter company credentials 
		System.out.println("Enter employee id: ");
		
		String id = scan.next(); 
		
		System.out.println("Enter employee name");
		
		String name = scan.next();	
		
	}

}

